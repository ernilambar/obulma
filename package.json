{
  "name": "obulma",
  "version": "1.0.8",
  "description": "Simple theme based on Bulma.",
  "author": "Nilambar Sharma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ernilambar/obulma/"
  },
  "keywords": [
    "theme",
    "wordpress"
  ],
  "scripts": {
		"dev": "webpack --watch",
    "build": "cross-env NODE_ENV=production webpack",
    "prod": "pnpm run build && pnpm run minify:css && pnpm run minify:js",
    "minify:css": "cleancss --batch --batch-suffix '.min' build/*.css",
    "minify:js": "uglifyjs-folder build -eo build",
    "eslint": "eslint --quiet .",
    "eslint:fix": "eslint --quiet --fix .",
    "format": "prettier --write \"src/**/*.scss\"",
    "preinstall": "npx only-allow pnpm",
    "pot": "wpi18n makepot --domain-path=languages --exclude=vendor,deploy,node_modules",
    "textdomain": "wpi18n addtextdomain --exclude=vendor,deploy,node_modules",
    "version": "easy-replace-in-files",
    "predeploy": "shx rm -rf vendor/ && composer install --no-dev --no-scripts -o && shx rm -rf build/ && pnpm run prod",
    "deploy": "shx rm -rf deploy/ && shx mkdir deploy && copy-files-from-to && cd deploy/ && cross-var shx mv temp $npm_package_name && cross-var bestzip ../$npm_package_name.zip * && cd .. && cross-var shx mv $npm_package_name.zip deploy/",
    "prewpdeploy": "pnpm run deploy",
    "wpdeploy": "wp-deployer"
  },
  "browserslist": "> 1%, not dead",
  "prettier": "@wordpress/prettier-config",
  "wpDeployer": {
    "repoType": "theme",
    "username": "rabmalin",
    "buildDir": "deploy/obulma",
    "earlierVersion": "1.0.7",
    "deployAssets": false
  },
  "dependencies": {
    "bulma": "^0.9.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@wordpress/eslint-plugin": "^13.7.0",
    "@wordpress/prettier-config": "^2.6.0",
    "babel-loader": "^9.1.0",
    "bestzip": "^2.2.1",
    "browser-sync": "^2.27.11",
    "browser-sync-webpack-plugin": "^2.3.0",
    "clean-css-cli": "^5.6.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-files-from-to": "^3.6.0",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "css-loader": "^6.7.3",
    "dotenv": "^16.0.3",
    "easy-replace-in-files": "^1.0.3",
    "eslint": "^8.30.0",
    "mini-css-extract-plugin": "^2.7.2",
    "node-wp-i18n": "^1.2.7",
    "postcss": "^8.4.20",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^7.8.3",
    "prettier": "^2.8.1",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "shx": "^0.3.4",
    "style-loader": "^3.3.1",
    "uglifyjs-folder": "^3.1.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "wp-deployer": "^1.0.3"
  }
}
