{
  "name": "obulma",
  "version": "1.0.8",
  "description": "Simple theme based on Bulma.",
  "author": "Nilambar Sharma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ernilambar/obulma/"
  },
  "keywords": [
    "theme",
    "wordpress"
  ],
  "scripts": {
    "dev": "pnpm run build && gulp",
    "build": "gulp build",
    "eslint": "eslint --quiet .",
    "eslint:fix": "eslint --quiet --fix .",
    "format": "prettier --write \"sass/**/*.scss\"",
    "preinstall": "npx only-allow pnpm",
    "pot": "wpi18n makepot --domain-path=languages --exclude=vendor,deploy,node_modules",
    "textdomain": "wpi18n addtextdomain --exclude=vendor,deploy,node_modules",
    "version": "easy-replace-in-files",
    "predeploy": "shx rm -rf vendor/ && composer install --no-dev --no-scripts -o && shx rm -rf css/ && shx rm -rf js/ && pnpm run build",
    "deploy": "shx rm -rf deploy/ && shx mkdir deploy && copy-files-from-to && cd deploy/ && cross-var shx mv temp $npm_package_name && cross-var bestzip ../$npm_package_name.zip * && cd .. && cross-var shx mv $npm_package_name.zip deploy/",
    "prewpdeploy": "pnpm run deploy",
    "wpdeploy": "wp-deployer"
  },
  "browserslist": "> 1%, not dead",
  "prettier": "@wordpress/prettier-config",
  "wpDeployer": {
    "repoType": "theme",
    "username": "rabmalin",
    "buildDir": "deploy/obulma",
    "earlierVersion": "1.0.7",
    "deployAssets": false
  },
  "dependencies": {
    "bulma": "^0.9.4"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^13.3.0",
    "@wordpress/prettier-config": "^2.2.0",
    "bestzip": "^2.2.1",
    "browser-sync": "^2.27.10",
    "copy-files-from-to": "^3.2.2",
    "cross-var": "^1.1.0",
    "dotenv": "^16.0.3",
    "easy-replace-in-files": "^1.0.3",
    "eslint": "^8.25.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-uglify": "^3.0.2",
    "node-wp-i18n": "^1.2.6",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "shx": "^0.3.4",
    "wp-deployer": "^1.0.3"
  }
}
