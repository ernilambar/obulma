{
	"name": "obulma",
	"version": "2.0.0",
	"description": "Simple theme based on Bulma.",
	"author": "Nilambar Sharma",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"theme",
		"wordpress"
	],
	"homepage": "https://github.com/ernilambar/obulma",
	"repository": {
		"type": "git",
		"url": "https://github.com/ernilambar/obulma.git"
	},
	"bugs": {
		"url": "https://github.com/ernilambar/obulma/issues"
	},
	"browserslist": "> 1%, not dead",
	"prettier": "@wordpress/prettier-config",
	"packtor": {
		"files": [
			"**/*",
			"!*.js",
			"!*.json",
			"!*.lock",
			"!*.yaml",
			"!src/**/*"
		]
	},
	"wpDeployer": {
		"repoType": "theme",
		"username": "rabmalin",
		"buildDir": "deploy/obulma",
		"earlierVersion": "1.0.11",
		"deployAssets": false
	},
	"npmpackagejsonlint": {
		"extends": "@wordpress/npm-package-json-lint-config"
	},
	"dependencies": {
		"bulma": "^1.0.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.24.7",
		"@babel/core": "^7.24.7",
		"@babel/preset-env": "^7.24.7",
		"@wordpress/npm-package-json-lint-config": "^5.1.0",
		"@wordpress/prettier-config": "^4.1.0",
		"babel-loader": "^9.1.3",
		"browser-sync": "^3.0.2",
		"browser-sync-v3-webpack-plugin": "^0.1.0",
		"clean-css-cli": "^5.6.3",
		"clean-webpack-plugin": "^4.0.0",
		"cross-env": "^7.0.3",
		"css-loader": "^7.1.2",
		"dotenv": "^16.4.5",
		"easy-replace-in-files": "^1.0.3",
		"mini-css-extract-plugin": "^2.9.0",
		"npm-package-json-lint": "^8.0.0",
		"packtor": "^1.0.2",
		"postcss": "^8.4.38",
		"postcss-import": "^16.1.0",
		"postcss-loader": "^8.1.1",
		"postcss-nested": "^6.0.1",
		"postcss-preset-env": "^9.5.14",
		"prettier": "npm:wp-prettier@^3.0.3",
		"shx": "^0.3.4",
		"style-loader": "^4.0.0",
		"uglifyjs-folder": "^3.3.0",
		"webpack": "^5.92.1",
		"webpack-cli": "^5.1.4",
		"wp-deployer": "^1.0.3"
	},
	"scripts": {
		"dev": "webpack --watch",
		"build": "cross-env NODE_ENV=production webpack",
		"prod": "pnpm run build && pnpm run minify:css && pnpm run minify:js",
		"minify:css": "cleancss --batch --batch-suffix '.min' build/*.css",
		"minify:js": "uglifyjs-folder build -eo build",
		"format": "prettier --write \"src/**/*.{js,jsx,css,scss}\" webpack.config.js *.json",
		"pot": "composer run-script pot",
		"version": "easy-replace-in-files",
		"lint-pkg-json": "npmPkgJsonLint .",
		"ready:build": "shx rm -rf build/ && pnpm run prod",
		"ready:vendor": "shx rm -rf vendor/ && composer install --no-dev --no-scripts -o",
		"predeploy": "pnpm run ready:vendor && pnpm run ready:build",
		"deploy": "packtor",
		"prewpdeploy": "pnpm run deploy",
		"wpdeploy": "wp-deployer"
	}
}
